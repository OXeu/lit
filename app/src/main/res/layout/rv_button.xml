<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/rvLinear"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="0dp"
	android:background="@drawable/dialog_bg"
	android:orientation="vertical"
	android:paddingLeft="18dp"
	android:paddingTop="18dp"
	android:paddingRight="18dp">
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">
		
		<ImageView
			android:id="@+id/rvBack"
			android:layout_width="32dp"
			android:layout_height="32dp"
			android:background="@drawable/ripple_circle"
			android:padding="4dp"
			android:src="@drawable/ic_back" />
		
		<TextView
			android:id="@+id/rvTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="24dp"
			android:text="Large Text"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="@color/accent" />
	
	</LinearLayout>
	
	<com.zmide.lit.view.MaxHeightRecyclerView
		android:id="@+id/recyclerView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:overScrollMode="never"
		app:maxHeight="200dp" />
	
	
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="8dp">
		
		<TextView
			android:id="@+id/rvCancel"
			android:layout_width="wrap_content"
			android:layout_height="32dp"
			android:layout_centerVertical="true"
			android:background="@drawable/ripple_15"
			android:gravity="center"
			android:paddingLeft="16dp"
			android:paddingRight="16dp"
			android:text="Cancel"
			android:textColor="@color/light"
			android:textSize="14sp"
			android:textStyle="normal" />
		
		<TextView
			android:id="@+id/rvMore"
			android:layout_width="wrap_content"
			android:layout_height="32dp"
			android:layout_centerHorizontal="true"
			android:background="@drawable/ripple_15"
			android:gravity="center"
			android:paddingLeft="16dp"
			android:paddingRight="16dp"
			android:text="新建"
			android:textColor="@color/light"
			android:textSize="14sp"
			android:textStyle="normal"
			android:visibility="gone" />
		
		<TextView
			android:id="@+id/rvOk"
			android:layout_width="wrap_content"
			android:layout_height="32dp"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:background="@drawable/ripple_positive"
			android:gravity="center"
			android:paddingLeft="16dp"
			android:paddingRight="16dp"
			android:text="OK"
			android:textColor="#ffffff"
			android:textSize="14sp"
			android:textStyle="normal" />
	
	</RelativeLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@color/bgcolor">
	
	<RelativeLayout
		android:id="@+id/settingItem2Parent"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/ripple_normal"
		android:paddingTop="16dp"
		android:paddingBottom="16dp">
		
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="24dp"
			android:orientation="vertical">
			
			<TextView
				android:id="@+id/settingItem2Title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text=""
				android:textColor="@color/accent"
				android:textSize="14sp" />
			
			<TextView
				android:id="@+id/settingItem2Description"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:text=""
				android:textColor="@color/light"
				android:textSize="12sp" />
		</LinearLayout>
		
		<RelativeLayout
			android:id="@+id/settingitem2RelativeLayout1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_centerVertical="true"
			android:layout_marginEnd="12dp">
			
			<ImageView
				android:id="@+id/settingItem2To"
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:padding="6dp"
				android:rotation="180"
				android:src="@drawable/back"
				android:tint="@color/light" />
			
			<Switch
				android:id="@+id/settingItem2Switch"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:visibility="gone" />
		</RelativeLayout>
		
		<TextView
			android:id="@+id/settingItem2Value"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_toStartOf="@id/settingitem2RelativeLayout1"
			android:gravity="center"
			android:text=""
			android:textColor="@color/light"
			android:textSize="12sp" />
	</RelativeLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/tagParent"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/ripple_normal">
	
	<ImageView
		android:id="@+id/tagIcon"
		android:layout_width="32dp"
		android:layout_height="32dp"
		android:layout_centerVertical="true"
		android:layout_margin="8dp"
		android:padding="8dp" />
	
	<LinearLayout
		android:id="@+id/tagitemLinearLayout1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:layout_marginLeft="12dp"
		android:layout_marginRight="12dp"
		android:gravity="center"
		android:orientation="vertical">
		
		<TextView
			android:id="@+id/tagTime"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="12/09 12:52"
			android:textColor="@color/light"
			android:textSize="8sp"
			android:visibility="gone" />
		
		<ImageView
			android:id="@+id/tagForward"
			android:layout_width="24dp"
			android:layout_height="24dp"
			android:padding="6dp"
			android:rotation="180"
			android:src="@drawable/back" />
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_toLeftOf="@id/tagitemLinearLayout1"
		android:layout_toRightOf="@id/tagIcon"
		android:orientation="vertical">
		
		<TextView
			android:id="@+id/tagTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_vertical|left"
			android:singleLine="true"
			android:text=""
			android:textColor="@color/accent"
			android:textSize="14sp" />
		
		<TextView
			android:id="@+id/tagRemark"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:singleLine="true"
			android:text=""
			android:textColor="@color/light"
			android:textSize="10sp" />
	</LinearLayout>
</RelativeLayout>

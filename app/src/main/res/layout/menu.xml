<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/menuHolder"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="16dp"
	android:background="@drawable/dialog_bg"
	android:orientation="vertical"
	android:padding="12dp">
	
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="32dp"
		android:layout_gravity="right"
		android:layout_margin="12dp"
		android:background="@drawable/menu_small_bar_bg"
		android:gravity="right"
		android:orientation="horizontal"
		android:padding="8dp"
		android:visibility="gone">
		
		<ImageView
			android:layout_width="24dp"
			android:layout_height="match_parent"
			android:layout_marginLeft="0dp"
			android:layout_marginRight="8dp"
			android:src="@drawable/share" />
		
		<ImageView
			android:layout_width="24dp"
			android:layout_height="match_parent"
			android:layout_marginRight="0dp"
			android:src="@drawable/setting" />
	
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:layout_marginBottom="8dp"
		android:orientation="horizontal">
		
		<LinearLayout
			android:id="@+id/menuMark"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:gravity="center"
			android:orientation="vertical">
			
			<ImageView
				android:layout_width="32dp"
				android:layout_height="32dp"
				android:padding="4dp"
				android:src="@drawable/mark"
				android:tint="@color/accent" />
			
			<TextView
				android:id="@+id/menuMarkT"
				android:layout_width="48dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				android:gravity="center"
				android:text="书签"
				android:textColor="@color/accent"
				android:textSize="12sp"
				android:transitionName="mark" />
		
		</LinearLayout>
		
		<LinearLayout
			android:id="@+id/menuMarkAdd"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:gravity="center"
			android:orientation="vertical">
			
			<ImageView
				android:layout_width="32dp"
				android:layout_height="32dp"
				android:padding="4dp"
				android:src="@drawable/mark_add"
				android:tint="@color/accent" />
			
			<TextView
				android:layout_width="48dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				android:gravity="center"
				android:text="添加书签"
				android:textColor="@color/accent"
				android:textSize="12sp" />
		
		</LinearLayout>
		
		<LinearLayout
			android:id="@+id/menuMarked"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:gravity="center"
			android:orientation="vertical"
			android:visibility="visible">
			
			<ImageView
				android:layout_width="32dp"
				android:layout_height="32dp"
				android:padding="4dp"
				android:src="@drawable/mark_added"
				android:tint="@color/accent" />
			
			<TextView
				android:layout_width="48dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				android:gravity="center"
				android:text="已收藏"
				android:textColor="@color/accent"
				android:textSize="12sp" />
		
		</LinearLayout>
		
		<LinearLayout
			android:id="@+id/menuHistory"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:gravity="center"
			android:orientation="vertical"
			android:visibility="visible">
			
			<ImageView
				android:layout_width="32dp"
				android:layout_height="32dp"
				android:padding="4dp"
				android:src="@drawable/history"
				android:tint="@color/accent" />
			
			<TextView
				android:id="@+id/menuHistoryT"
				android:layout_width="48dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				android:gravity="center"
				android:text="历史"
				android:textColor="@color/accent"
				android:textSize="12sp"
				android:transitionName="history" />
		
		</LinearLayout>
		
		<LinearLayout
			android:id="@+id/menunoHistory"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:gravity="center"
			android:orientation="vertical"
			android:visibility="visible">
			
			<ImageView
				android:id="@+id/menuNoHistoryI"
				android:layout_width="32dp"
				android:layout_height="32dp"
				android:padding="4dp"
				android:tint="@color/accent" />
			
			<TextView
				android:layout_width="48dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				android:gravity="center"
				android:text="无痕模式"
				android:textColor="@color/accent"
				android:textSize="12sp"
				android:transitionName="download" />
		
		</LinearLayout>
		
		<LinearLayout
			android:id="@+id/menuSetting"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:gravity="center"
			android:orientation="vertical"
			android:visibility="visible">
			
			<ImageView
				android:layout_width="32dp"
				android:layout_height="32dp"
				android:padding="3dp"
				android:src="@drawable/setting"
				android:tint="@color/accent" />
			
			<TextView
				android:id="@+id/menusettingT"
				android:layout_width="48dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				android:gravity="center"
				android:text="设置"
				android:textColor="@color/accent"
				android:textSize="12sp"
				android:transitionName="setting" />
		
		</LinearLayout>
	
	</LinearLayout>
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:layout_marginBottom="8dp"
		android:orientation="horizontal"
		android:visibility="visible">
		
		<LinearLayout
			android:id="@+id/menuUa"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:gravity="center"
			android:orientation="vertical"
			android:visibility="visible">
			
			<ImageView
				android:layout_width="32dp"
				android:layout_height="32dp"
				android:padding="4dp"
				android:src="@drawable/ua"
				android:tint="@color/accent" />
			
			<TextView
				android:id="@+id/menuUAT"
				android:layout_width="68dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				android:gravity="center"
				android:text="UA"
				android:textColor="@color/accent"
				android:textSize="12sp"
				android:transitionName="diy" />
		
		</LinearLayout>
		
		<LinearLayout
			android:id="@+id/menuPlugin"
			android:layout_width="68dp"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:gravity="center"
			android:orientation="vertical"
			android:visibility="visible">
			
			<ImageView
				android:layout_width="32dp"
				android:layout_height="32dp"
				android:padding="4dp"
				android:src="@drawable/plugin"
				android:tint="@color/accent" />
			
			<TextView
				android:id="@+id/menuPluginT"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				android:gravity="center"
				android:text="插件"
				android:textColor="@color/accent"
				android:textSize="12sp"
				android:transitionName="diy" />
		
		</LinearLayout>
		
		<LinearLayout
			android:id="@+id/menuNight"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:gravity="center"
			android:orientation="vertical"
			android:visibility="visible">
			
			<ImageView
				android:layout_width="32dp"
				android:layout_height="32dp"
				android:padding="4dp"
				android:src="@drawable/night"
				android:tint="@color/accent" />
			
			<TextView
				android:id="@+id/menuNightT"
				android:layout_width="68dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				android:gravity="center"
				android:text="@string/night"
				android:textColor="@color/accent"
				android:textSize="12sp" />
		
		</LinearLayout>
		
		<LinearLayout
			android:id="@+id/menuResource_catcher"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:gravity="center"
			android:orientation="vertical"
			android:visibility="visible">
			
			<ImageView
				android:layout_width="32dp"
				android:layout_height="32dp"
				android:padding="4dp"
				android:src="@drawable/resource_catcher"
				android:tint="@color/accent" />
			
			<TextView
				android:layout_width="68dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				android:gravity="center"
				android:text="嗅探"
				android:textColor="@color/accent"
				android:textSize="12sp" />
		
		</LinearLayout>
		
		<LinearLayout
			android:id="@+id/menuRefresh"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1.0"
			android:gravity="center"
			android:orientation="vertical"
			android:visibility="visible">
			
			<ImageView
				android:layout_width="32dp"
				android:layout_height="32dp"
				android:padding="4dp"
				android:src="@drawable/refresh"
				android:tint="@color/accent" />
			
			<TextView
				android:layout_width="68dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				android:gravity="center"
				android:text="刷新"
				android:textColor="@color/accent"
				android:textSize="12sp" />
		
		</LinearLayout>
	
	</LinearLayout>

</LinearLayout>

